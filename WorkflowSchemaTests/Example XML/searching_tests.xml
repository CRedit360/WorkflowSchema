<workflow>
    <screen>
        <table>
            <tableHeaderView>
                <searchBar>
                    <placeholder>Search...</placeholder>
                    <searchMessage>searchBarDidSearch</searchMessage>
                    <scopeButtonItems>
                        <actionButtonItem>
                            <title>Both</title>
                            <message>searchBarDidSearch</message>
                        </actionButtonItem>
                        <actionButtonItem>
                            <title>Animals</title>
                            <message>searchBarDidSearch</message>
                        </actionButtonItem>
                        <actionButtonItem>
                            <title>Fruit</title>
                            <message>searchBarDidSearch</message>
                        </actionButtonItem>
                    </scopeButtonItems>
                </searchBar>
            </tableHeaderView>
            <sections>
                <tableSection keyPath="sections">
                    <default>
                        <tableSection>
                            <tableCell>No results found</tableCell>
                        </tableSection>
                    </default>
                    <template>
                        <tableSection>
                            <headerTitle><string keyPath="title" /></headerTitle>
                            <cells>
                                <tableCell keyPath="results">
                                    <template>
                                        <tableCell><string keyPath="text" /></tableCell>
                                    </template>
                                </tableCell>
                            </cells>
                        </tableSection>
                    </template>
                </tableSection>
            </sections>
            <actions>
                <sendMessage name="searchBarDidSearch">
                    <messageTarget>scenarioFunctionalTestSearching</messageTarget>
                    <messageName>getResults</messageName>
                    <multipleActions>
                        <storeValues />
                        <reloadData />
                    </multipleActions>
                </sendMessage>
            </actions>
        </table>
    </screen>
</workflow>